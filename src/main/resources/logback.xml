<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%highlight(%-5level) %red(>) %green(%msg) %n</pattern>
    </encoder>
  </appender>
  <root level="info" additivity="false">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>
